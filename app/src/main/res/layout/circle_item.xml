<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/zsq_bg_color"
        />
    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal" >


        <cn.xiaocool.wxtparent.ui.RoundImageView
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_margin="10dip"
            android:scaleType="centerInside"
            android:id="@+id/item_head"
            android:src="@drawable/default_square" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayout_profession_circle_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">


                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="5dip"
                    android:text="少东家"
                    android:textColor="@color/list_title_color"
                    android:textSize="16sp" />


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relativeLayout_profession_circle_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_size_10"
                    android:textSize="13sp"
                    android:text="20:20"
                    android:textColor="@color/gray"
                    />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/zsq_bg_color" />
    <RelativeLayout
        android:id="@+id/tecxt_homwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/activity_size_50"
        android:layout_marginRight="@dimen/activity_size_10">

        <TextView
            android:id="@+id/myhomework_content"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/activity_size_10"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myhomework_title"
            android:text="宝宝今天参加六一儿童节的舞蹈表演了，真的是太可爱了"
            android:maxLines="2"
            android:textColor="@color/list_content_color"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/activity_size_50">

        <ImageView
            android:id="@+id/parent_warn_img"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/activity_size_10"
            android:scaleType="centerCrop"
            android:layout_height="300dp"
            android:visibility="gone"
            />
        <cn.xiaocool.wxtparent.ui.NoScrollGridView
            android:id="@+id/parent_warn_img_gridview"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_size_10"
            android:listSelector="@color/white"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"></cn.xiaocool.wxtparent.ui.NoScrollGridView>
    </RelativeLayout>

