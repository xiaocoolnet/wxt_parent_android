<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/whilte"
    android:orientation="horizontal"
    android:id="@+id/news_class_homework">

    <!--家长叮嘱左边的小图标-->
    <ImageView
        android:id="@+id/news_homework"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/homwork"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
    <!--文字-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/news_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/news_hot_news"
            android:text="班级作业"
            android:textSize="16sp"


            />
        <!--文字下面介绍-->

        <TextView
            android:id="@+id/tv_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_text1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/news_hot_news"
            android:text=""
            android:textColor="@color/color_gray"
            android:textSize="14sp"


            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2"
        android:layout_alignParentBottom="true"
        />
</LinearLayout>