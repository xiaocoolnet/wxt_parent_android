<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_mother_pic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="妈妈头像"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_mother_pic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/default_avatar"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="0.5dp"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="姓名"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_mother_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="无"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/zsq_text_gray_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="0.5dp"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="职业"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_mother_job"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="无"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/zsq_text_gray_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="0.5dp"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="联系电话"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_mother_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="无"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/zsq_text_gray_color"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:layout_marginTop="0.5dp"
        android:paddingLeft="10dp"
        android:text="最喜欢和妈妈做什么"/>
    <TextView
        android:id="@+id/tv_mother_like"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:textSize="15sp"
        android:textColor="@color/zsq_text_gray_color"
        android:paddingLeft="10dp"
        android:text="无"/>
</LinearLayout>
