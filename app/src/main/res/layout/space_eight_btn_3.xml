    <!--第三个按钮-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte"
        android:id="@+id/space_friends">
        <ImageView
            android:id="@+id/btn_file"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/haoyou"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/space_btn_baby_friend"
            android:layout_below="@+id/btn_file"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>
    <!--第四个按钮-->
    <RelativeLayout
        android:id="@+id/space_announcement"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">

        <RelativeLayout
            android:id="@+id/rl_gonggao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/btn_confirm1"
                android:layout_width="@dimen/activity_size_50"
                android:layout_height="@dimen/activity_size_50"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gonggao"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_confirm1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_size_8"
                android:text="@string/space_btn_announcement"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
