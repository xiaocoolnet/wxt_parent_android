<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    >






    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_size_150"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/username_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/log_edit_layout_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_size_5">
            <ImageView
                android:id="@+id/user_small"
                android:layout_width="27dp"
                android:layout_height="34dp"
                android:background="@drawable/user_small"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="254dp"
                android:layout_height="48dp"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入用户名"
                android:id="@+id/login_phonenum" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/activity_size_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_layout"
            android:background="@drawable/log_edit_layout_bg"
            android:paddingLeft="@dimen/activity_size_5">

            <ImageView
                android:id="@+id/small_password"
                android:layout_width="27dp"
                android:layout_height="34dp"
                android:background="@drawable/small_password"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="3dp"/>
            <EditText
                android:layout_width="254dp"
                android:layout_height="48dp"
                android:background="@null"
                android:hint="请输入密码"
                android:singleLine="true"
                android:id="@+id/login_Password"
                android:inputType="textPassword" />


        </LinearLayout>


        <Button
            android:layout_width="291dp"
            android:layout_height="48dp"
            android:layout_below="@+id/edit_view2"
            android:background="@drawable/log_button_bolder"
            android:layout_marginTop="27dp"
            android:layout_alignLeft="@+id/edit_view2"
            android:text="登录"
            android:textSize="23sp"
            android:textColor="#36be64"
            android:id="@+id/login_login" />

    </LinearLayout>





    <ImageView
        android:id="@+id/left_jiantou"
        android:layout_height="10dp"
        android:layout_width="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="33dp"
        />
    <TextView
        android:id="@+id/tv_login_forgetpassword"
        android:layout_width="70dp"
        android:layout_height="17dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="29.2dp"
        android:textColor="#36be64"
        />


    <ImageView
        android:id="@+id/right_jiantou"
        android:background="@drawable/right_jiantou"
        android:layout_height="10dp"
        android:layout_width="6dp"

        android:layout_alignBottom="@+id/left_jiantou"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"


        />
    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="70dp"
        android:layout_height="17dp"
        android:text="忘记密码"
        android:textColor="#36be64"
        android:layout_alignTop="@+id/tv_login_forgetpassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"/>





</RelativeLayout>
