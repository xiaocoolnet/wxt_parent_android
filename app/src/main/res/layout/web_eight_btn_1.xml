<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/activity_size_5">
    <!--第一个按钮-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte"
        android:id="@+id/web_introduce">
        <ImageView
            android:id="@+id/btn_website"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/web_btn_yuanqujieshao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="园区介绍"
            android:layout_below="@+id/btn_website"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>


    <!--第2个按钮-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte"
        android:id="@+id/web_teacher_style">
        <ImageView
            android:id="@+id/btn_files"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/web_btn_jiaoshifengcai"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="教师风采"
            android:layout_below="@+id/btn_files"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>

    <!--第3个按钮-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte"
        android:id="@+id/web_recipes">
        <ImageView
            android:id="@+id/btn_recip"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/shipu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="今日食谱"
            android:layout_below="@+id/btn_recip"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>

    <!--第四个按钮-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte"
        android:id="@+id/web_baby_show">
        <ImageView
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/web_btn_baobaoxiuchang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="宝宝秀场"
            android:layout_below="@+id/btn_confirm"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>
</LinearLayout>
