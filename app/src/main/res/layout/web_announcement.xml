<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:id="@+id/announcement">
        <!--横线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/web_hengxian"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <!--园所公告图片-->
        <ImageView
            android:layout_width="26dp"
            android:layout_height="21dp"
            android:background="@drawable/ic_yuansuogonggao"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <!--园所公告文字-->
        <TextView
            android:id="@+id/web_yuansuogonggao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="园所公告"
            android:textSize="16sp"
            android:layout_marginLeft="43dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:id="@+id/gonggao_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <!--更多文字-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_gray3"
                />
            <!--右箭头-->
            <ImageView
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:background="@drawable/ic_arrow_right_gray"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"

                />
        </LinearLayout>





    </RelativeLayout>

    <cn.xiaocool.wxtparent.ui.NoScrollListView
        android:id="@+id/web_gonggao_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.xiaocool.wxtparent.ui.NoScrollListView>

</LinearLayout>
