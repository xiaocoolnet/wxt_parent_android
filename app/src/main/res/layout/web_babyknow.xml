<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/web_babyknow_happy_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/web_babyknow_happy_title"
        android:layout_width="@dimen/activity_size_200"
        android:layout_height="@dimen/activity_size_30"
        android:layout_alignLeft="@+id/web_babyknow_happy_content"
        android:layout_alignTop="@id/web_babyknow_happy_pic"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/web_babyknow_happy_content"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/web_babyknow_happy_pic"
        android:layout_marginLeft="120dp"
        android:textSize="16sp" />
