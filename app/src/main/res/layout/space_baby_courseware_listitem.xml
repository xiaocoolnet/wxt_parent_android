<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="@dimen/activity_size_1">



        <TextView
            android:layout_width="@dimen/activity_size_350"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="@dimen/activity_size_10"
            android:id="@+id/title" />

        <TextView
            android:layout_width="@dimen/activity_size_350"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/activity_size_10"
            android:id="@+id/content" />

        <TextView
            android:layout_width="@dimen/activity_size_100"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/activity_size_5"
            android:id="@+id/name" />
        <TextView
            android:layout_width="@dimen/activity_size_100"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/activity_size_5"
            android:id="@+id/date" />




    </LinearLayout>

