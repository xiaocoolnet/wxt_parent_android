<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_ground_color"

    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_bg_color"
            android:gravity="center"
            android:text="@string/space_confirm_title"
            android:textColor="@color/whilte"
            android:textSize="20sp" />
        <RelativeLayout
            android:id="@+id/up_jiantou"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_fanhui"
                android:id="@+id/btn_exit" />
        </RelativeLayout>
    </RelativeLayout>
    <!--<ListView-->
        <!--android:id="@+id/lv_confirm"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->




    <LinearLayout
        android:id="@+id/linear_rg"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_daichuli"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="待处理"
                android:textColor="@color/title_bg_color"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/btn_yiwancheng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/black"
                android:textSize="18sp" />
<!--            <RadioButton
                android:id="@+id/btn_yiguoqi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="已过期"
                android:textColor="@color/black"
                android:textSize="18sp" />-->


        </RadioGroup>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_rg">

        <View
            android:id="@+id/line_daichuli"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/title_bg_color" />
        <View
            android:layout_width="0dp"
            android:id="@+id/line_yiwancheng"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/zsq_bg_color" />
<!--        <View
            android:layout_width="0dp"
            android:id="@+id/line_yiguoqi"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/white" />-->


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/re_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>






</LinearLayout>
