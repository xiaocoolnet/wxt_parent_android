<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_size_100"
    android:background="@color/black"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/activity_size_5" >

    <RelativeLayout
        android:layout_width="@dimen/activity_size_72"
        android:layout_height="@dimen/activity_size_72"
        android:layout_margin="@dimen/activity_size_5" >

        <ImageView
            android:layout_width="@dimen/activity_size_70"
            android:layout_height="@dimen/activity_size_70"
            android:layout_centerInParent="true"
            android:background="@drawable/head_outside" />

        <com.woyaoxunpai.widget.CircularImage
            android:id="@+id/two_attention_header"
            android:layout_width="@dimen/activity_size_64"
            android:layout_height="@dimen/activity_size_64"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="@dimen/activity_size_20"
            android:layout_height="@dimen/activity_size_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ppppp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/two_attention_personal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_size_10"
        android:layout_weight="5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_20"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/two_attention_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/two_attention_sex"
                android:layout_width="@dimen/activity_size_12"
                android:layout_height="@dimen/activity_size_12"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:scaleType="centerCrop"
                android:src="@drawable/boy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_15"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/two_attention_camerage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/two_attention_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_size_20"
                android:background="@null"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/two_attention_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:textSize="@dimen/text_size_12"
                android:lines="3"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/two_attention_attention"
            android:layout_width="@dimen/activity_size_60"
            android:layout_height="@dimen/activity_size_25"
            android:background="@drawable/button_white"
            android:text="取消关注"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>