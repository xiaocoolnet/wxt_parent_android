<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">
    <!--第一个按钮-->
    <RelativeLayout
        android:id="@+id/space_courseware"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">

        <ImageView
            android:id="@+id/btn_website"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"
            android:background="@drawable/kejian"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_website"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_8"
            android:text="@string/space_btn_baby_courseware"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />


    </RelativeLayout>



    <!--第二个按钮-->

    <RelativeLayout
        android:id="@+id/space_class"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">

        <ImageView
            android:id="@+id/btn_album"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"
            android:background="@drawable/kechegn"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_album"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_8"
            android:text="@string/space_btn_class"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />


    </RelativeLayout>

    <!--第三个按钮-->


    <!--第四个按钮-->



    <RelativeLayout
        android:id="@+id/space_activity"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">

        <RelativeLayout
            android:id="@+id/rl_huodong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/btn_files"
                android:layout_width="@dimen/activity_size_50"
                android:layout_height="@dimen/activity_size_50"
                android:layout_centerHorizontal="true"
                android:background="@drawable/huodong"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_files"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_size_8"
                android:text="@string/space_btn_class_activity"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
    </RelativeLayout>
</LinearLayout>
