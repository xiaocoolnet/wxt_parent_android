<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/activity_size_100"
    android:background="@color/whilte"
    android:orientation="horizontal"
    android:padding="@dimen/activity_size_10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" >

        <ImageView
            android:id="@+id/two_order_imageview"
            android:layout_width="@dimen/activity_size_80"
            android:layout_height="@dimen/activity_size_80"
            android:layout_margin="@dimen/activity_size_5"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_order_middle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_size_10"
        android:layout_weight="7"
        android:orientation="vertical" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/mine_order_item_id_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:text="订单编号："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10" />



            <TextView
                android:id="@+id/two_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView
                android:id="@+id/mine_order_item_product_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:text="产品名称："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/mine_order_productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView
                android:id="@+id/mine_order_item_prices_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:text="下单总价："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/mine_order_pricecontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical" >




            <TextView
                android:id="@+id/main_photo_item_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:text="下单时间："
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/two_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activity_size_5"
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size_10" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/two_order_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:textColor="@drawable/color_red"
            android:textSize="@dimen/text_size_10" />
        <TextView
            android:id="@+id/two_order_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已支付"
            android:textColor="#00640a"
            android:textSize="@dimen/text_size_10"
            android:layout_marginTop="@dimen/activity_size_10" />


    </LinearLayout>

</LinearLayout>