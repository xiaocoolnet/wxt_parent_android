<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.Leave_add_activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/title_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="在线请假"
            android:textColor="@color/whilte"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/up_jiantou"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_exit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_fanhui" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/re_send"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>


    <cn.xiaocool.wxtparent.ui.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:id="@+id/re_dzr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/dzr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="叮嘱人"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_dingzhuren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/dzr"
                    android:text=""
                    android:textColor="@color/color_gray"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_dzr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/zsq_bg_color" />

            <RelativeLayout
                android:id="@+id/re_jsr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/jsr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="接收人"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_jieshouren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/jsr"
                    android:text=""
                    android:textColor="@color/color_gray"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_jsr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/zsq_bg_color" />


            <RelativeLayout
                android:id="@+id/re_kssj"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/kssj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="开始时间"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_kssj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:text=""
                    android:textColor="@color/color_gray"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_kssj"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/zsq_bg_color" />


            <RelativeLayout
                android:id="@+id/re_jssj"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/jssj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="结束时间"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_jssj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:text=""
                    android:textColor="@color/color_gray"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_jssj"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/zsq_bg_color" />

            <RelativeLayout
                android:id="@+id/re_qjlb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/qjlb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请假类别"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_qjlb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="60dp"
                    android:text=""
                    android:textColor="@color/color_gray"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/iv_qjlb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/zsq_bg_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                android:id="@+id/ed_reason"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/color_gray"
                android:hint="请假内容" />
            <cn.xiaocool.wxtparent.ui.NoScrollGridView
                android:id="@+id/add_gridview"
                android:layout_width="match_parent"
                android:horizontalSpacing="3dp"
                android:verticalSpacing="3dp"
                android:numColumns="4"
                android:layout_height="wrap_content">
            </cn.xiaocool.wxtparent.ui.NoScrollGridView>

        </LinearLayout>
    </cn.xiaocool.wxtparent.ui.ReboundScrollView>


</LinearLayout>
