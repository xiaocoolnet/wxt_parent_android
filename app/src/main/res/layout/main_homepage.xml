<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/title_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"
        android:background="@color/green"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/main_attention"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="宝宝空间"
            android:textColor="@drawable/color_white"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_0"
        android:layout_weight="20"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_45"
        android:background="@color/title_color" >

        <RelativeLayout
            android:id="@+id/main_homepage"
            android:layout_width="@dimen/activity_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/activity_size_16"
                    android:layout_height="@dimen/activity_size_20"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/click_space" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝宝"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_photos"
            android:layout_width="@dimen/activity_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/activity_size_16"
                    android:layout_height="@dimen/activity_size_25"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/click_diary"
                    android:id="@+id/main_riji" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成长日记"
                    android:textColor="@color/colorbutton"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main_space"
            android:layout_width="@dimen/activity_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/activity_size_16"
                    android:layout_height="@dimen/activity_size_25"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/click_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:textColor="@color/colorbutton"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main_shoot"
            android:layout_width="@dimen/activity_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/activity_size_16"
                    android:layout_height="@dimen/activity_size_25"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/click_web" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校网"
                    android:textColor="@color/colorbutton"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_mine"
            android:layout_width="@dimen/activity_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/activity_size_16"
                    android:layout_height="@dimen/activity_size_20"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/click_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textColor="@color/colorbutton"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>