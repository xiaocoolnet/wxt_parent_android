<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/activity_size_1">
    <!--第一个按钮-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte"
        android:id="@+id/space_review">
        <RelativeLayout
            android:id="@+id/rl_dianping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/btn_web"
                android:layout_width="@dimen/activity_size_50"
                android:layout_height="@dimen/activity_size_50"
                android:background="@drawable/dianping"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/space_btn_teacher_review"
                android:layout_below="@+id/btn_web"
                android:layout_marginTop="@dimen/activity_size_8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"
                />
        </RelativeLayout>

    </RelativeLayout>



    <!--第二个按钮-->
    <RelativeLayout
        android:id="@+id/space_park"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">

        <ImageView
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"
            android:background="@drawable/xiaowang"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_8"
            android:text="@string/web_menu_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />


    </RelativeLayout>
