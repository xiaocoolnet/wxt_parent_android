<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/me_order"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_me_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_size_30"
                android:textColor="@color/me_text_color"
                android:text="@string/me_order_text"
                android:textSize="14sp" />
        </RelativeLayout>

<View
    android:layout_width="0.5dp"
    android:layout_height="match_parent"
    android:background="@color/zsq_bg_color"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

    <TextView
        android:id="@+id/tv_me_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dip"
        android:textColor="@color/me_text_color"
        android:text="@string/me_pay_text"
        android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>