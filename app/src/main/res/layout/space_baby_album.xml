<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/title_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/title_bg_color"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/album"
            android:textColor="@color/whilte"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/up_jiantou"
            android:layout_width="100dip"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/baby_album_btn_exit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:onClick="onClick"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_fanhui"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>




            <ImageView
                android:id="@+id/iv_tianjia"
                android:layout_width="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_fabiao" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/space_btn_album_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="17sp"
                android:onClick="onClick"
                android:text="@string/space_btn_album"
                android:textColor="@color/title_bg_color" />

            <RadioButton
                android:id="@+id/space_btn_album_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:onClick="onClick"
                android:textSize="17sp"
                android:text="班级相册" />

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_rg">

        <View
            android:id="@+id/line_laoshi"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/title_bg_color" />
        <View
            android:layout_width="0dp"
            android:id="@+id/line_haoyou"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/zsq_bg_color" />
    </LinearLayout>


